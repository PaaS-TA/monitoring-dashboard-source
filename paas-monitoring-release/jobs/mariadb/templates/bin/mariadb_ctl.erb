#!/bin/bash


BASE_DIR=/var/vcap/store/mariadb
CONF_FILE=$BASE_DIR/mariadb.cnf
PID_FILE=/var/vcap/sys/run/mysqld.pid


case $1 in

start)
echo "start"

$BASE_DIR/bin/mysqld --defaults-file=$CONF_FILE --user=vcap

RETVAL=$?

[ $RETVAL -ne 0 ] && exit $RETVAL

;;

stop)
echo "stop"
sudo kill $(cat $PID_FILE)
;;

*)
echo "Usage: mariadb_ctl {start|stop}" ;;

esac
